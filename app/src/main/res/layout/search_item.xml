<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="205dp"
    android:layout_height="190dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/imageCardView"
        android:layout_width="180dp"
        android:layout_height="101dp"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/itemImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/sampleimg" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/itemTitleTextView"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="제목제목제목제목제목제목제목제목제목제목제목제목제목제목제목제목제목제목제목제목제목제목제목제목"
        android:textSize="12sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/imageCardView"
        app:layout_constraintTop_toBottomOf="@+id/imageCardView" />

    <TextView
        android:id="@+id/itemChannelTextView"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="채널명"
        android:textSize="10sp"
        android:textColor="@color/dark_grey"
        app:layout_constraintStart_toStartOf="@+id/itemTitleTextView"
        app:layout_constraintTop_toBottomOf="@+id/itemTitleTextView" />

    <TextView
        android:id="@+id/itemDateTimeTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="5일전"
        android:textColor="@color/dark_grey"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/itemChannelTextView"
        app:layout_constraintTop_toBottomOf="@+id/itemChannelTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>